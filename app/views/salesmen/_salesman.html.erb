<ul>


  <li>
    Salesman Number: <%= salesman.emp_id %>
  </li>
  <li>
    Name: <%= salesman.name %>
  </li>
  <li>
    Title: <%= salesman.title %>
  </li>
  <li>
    Phone Number: <%= salesman.phone_number %>
  </li>
  <% if logged_in? %>
    <p><%= link_to "Edit Salesman", edit_salesman_path(@salesman) %></p>
  <% end %>
  <li>
    <h4>Customer List</h4>
      <% @salesman.customers.each do |customer|%>
        <ol><%= link_to "#{customer.id}. #{customer.name}", customer_path(customer) %></ol>
      <%end%>
  </li>
  <li>
    <h4>Sales Order List</h4>
      <% @salesman.salesorders.each do |salesorder|%>
        <ol>
          <%= link_to "#{salesorder.id}. ##{salesorder.order_number}", customer_salesorder_path(salesorder) %> - 
          <%= link_to "#{salesorder.customer.name}", customer_path(salesorder.customer) %>
          <br />

        </ol>
      <%end%>
  </li>

</ul>
