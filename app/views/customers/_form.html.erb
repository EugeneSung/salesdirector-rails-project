<%= form_for(customer) do |f| %>

  <div class="field"><%= f.label :salesman_id %><br>
  <%= f.collection_select(:salesman_id, Salesman.all, :id, :name ) %>
  <div class="field"> <%= f.label :name %><br>
  <%= f.text_field :name %></div>
  <div class="field"><%= f.label :address, value = "Address:" %><br>
  <%= f.text_field :address %></div>
  <div class="field"><%= f.label :phone_number, value = "Phone Number:" %><br>
  <%= f.text_field :phone_number %></div>
  <br>

  <div class="actions"><%= f.submit 'Submit', :class => 'btn btn-primary' %></div>

<% end %>
